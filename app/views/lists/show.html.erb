<div class="container">
<h1 class="text-center"><%= @list.name %></h1>


<%= console %>

  <div class="card">
    <% @list.bookmarks.each do |bookmark| %>
      <ul><h2><%= bookmark.movie.title %></h2></ul>
      <ul><%= bookmark.movie.poster_url %></ul>
      <ul><%= bookmark.movie.overview %></ul>
      <ul><h3><%= bookmark.movie.rating %> /10</h3></ul>
      <p><%= bookmark.comment %></p>

      <button class="btn btn-success"><%= link_to "Add a bookmark", new_list_bookmark_path(@list) %></button>
      <button class="btn btn-success"><%= link_to "Delete this bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %></button>
    <% end %>
  </div>
</div>

<%= link_to 'Back to all lists', lists_path %>
