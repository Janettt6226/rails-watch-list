<%= render 'navbar', list: @list %>

<div class="container justify-content-center">
  <h1 class="text-center"><%= @list.name %></h1>
  <%# <%= console %>

  <button class="btn btn-outline-info mb-5"><%= link_to "📍 Add a bookmark", new_list_bookmark_path(@list) %></button>

  <div class="card-group">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card" style="width: 24rem">
        <img class="card-img-top"><%= image_tag bookmark.movie.poster_url %>
        <div class="card-body">
          <h2 class="card-title"><%= bookmark.movie.title %></h2>
          <h5 class="card-subtitle mb-2 text-muted"><%= bookmark.movie.rating %> /10</h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <p>Comment: <%= bookmark.comment %></p>
          <button class="btn btn-warning"><%= link_to "Delete this bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %></button>
        </div>
        </div>
    <% end %>
  </div>
  <%= link_to 'Back to all lists', lists_path %>
</div>
