<%= render 'navbar', list: @list %>
<div class="banner-hp" style="height: 300px">
  <h1 class="text-center">Save any kind of movies 🎞️</h1>
</div>

<div class="container">
  <div class="row row-cols-4"></div>
    <% @lists.each do |list| %>
      <div class="card col list-card" style="width: 18rem">
          <h2 class="card-title"><%= link_to list.name, list_path(list) %></h2>
      </div>
    <% end %>
  <button class="btn btn-success"><%= link_to "Create a movie list", new_list_path %></button>
</div>
